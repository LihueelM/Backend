<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <title>Handlebars</title>
</head>
<body>
    {{!-- Carga de productos  --}}
    <div>
            <h1 style="color:blue;">Carga de productos</h1>
        <br>

        <form action="/" method="post">
            <div>
                <label for="nombre"><b>Nombre del producto</b></label>
                <input id="nombre" type="text" name="nombre">
            </div>    

            <div>
                <label for="precio"><b>Precio</b></label>
                <input id="precio" type="number" name="precio">
            </div>

            <div>
                <label for="imagen"><b>Url de imagen</b></label>
                <input id="imagen" type="text" name="imagen">
            </div>

            <button id="botonEnviar">Enviar</button>
            <div id="listaMensajes">

            </div>
        </form>
        <br>

        <div>
            <a href="/productos">Ver productos cargados</a>
        </div>

    </div>
{{!-- Chat webSocket --}}
    <div>
            <div>
                <h1 style="color:blue;">Chat en tiempo real</h1>
            <br>

            <form action="/" method="post">
                <div>
                    <label for="autor"><b>Autor</b></label>
                    <input id="autor" type="text" name="autor">
                </div>    

                <div>
                    <label for="texto"><b>Texto</b></label>
                    <input id="texto" type="text" name="texto">
                </div>

                <button id="botonEnviarMensaje">Enviar</button>
                
                <div id="listaMensajesChat"></div>
            </form>
            <br>
        </div>
    </div>
    
    <script src="js/inicio.js"></script>

</body>
</html>